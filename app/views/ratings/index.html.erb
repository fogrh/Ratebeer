<h2>Ratings</h2>
<p> Number of ratings: <%= @ratings.count %>.     
<%if current_user %>
<%= link_to 'Add new rating', new_rating_path, class:'btn btn-primary' %></t></p>
<%end%>
<p>
    <div class="row">
      <div class="col-xs-8 col-sm-6">
        	<h3>Best beers</h3>
		<table class="table table-hover">
 		<thead>
		<tr>
		<th>Beer</th>
		<th>Average</th>
		</tr>
		</thead>			
			<tbody>
			<%@beers.first.top_rated(3).each do |b| %>
			<tr>
			<td><%=link_to b.name, b %></td> 
			<td><%= round( b.average_rating) %></td> 			
			</tr>
			<%end%>
			</tbody>
		</table>
      </div>
      <div class="col-xs-4 col-sm-6">
        	<h3>Best breweries</h3>
		<table class="table table-hover">
 		<thead>
		<tr>
		<th>Brewery</th>
		<th>Average</th>
		</tr>
		</thead>			
			<tbody>
			<%@brewery.first.top_rated(3).each do |b| %>
			<tr>
			<td><%=link_to  b.name, b %></td> 
			<td><%=round( b.average_rating) %></td> 			
			</tr>
			<%end%>
			</tbody>
		</table>
      </div>
    </div>

</p>
<h3>Most active users</h3>
 <table class="table table-hover">
 	<thead>
		<tr>
		<th>User</th>
		<th>Ratings</th>
		</tr>
	</thead>			
	<tbody>
		<%@user.most_rated(3).each do |b| %>
		<tr>
		<td><%=link_to b.username, b%></td> 
		<td><%= b.ratings.count %></td> 			
		</tr>
		<%end%>
	</tbody>
 </table>
<h3>Recent ratings</h3>
 <table class="table table-hover">
 	<thead>
		<tr>
		<th>Beer</th>
		<th>Score</th>
		<th>User</th>
		</tr>
	</thead>			
	<tbody>
		<%@ratings.recent.each do |b| %>
		<tr>
		<td><%=link_to b.beer.name, beer_path(b.beer)%></td>
		<td><%= b.score%></td> 	
		<td><%=link_to b.user.username, b%></td> 
				
		</tr>
		<%end%>
	</tbody>
 </table>

