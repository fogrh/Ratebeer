<h2>List of beerstyles</h2>
<p> Number of styles: <%= @styles.count %> </p>

<table class="table table-hover">
	<thead>
	<tr><th>Style</th></tr>
	</thead>
	
	 <% @styles.each do |style| %>  
	<tbody>
	<td><%= link_to style.beerstyle, style_path(style)%></td>
	</tbody>
	<% end %>	
 
</table>

<p>
<%= link_to 'Add new style', new_style_path, class:"btn btn-primary" %>
</p>


