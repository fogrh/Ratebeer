<h2>
  <%= @style.beerstyle %>
</h2>

<p>
<%= @style.description %>
</p>

<h3>List of beers:</h3>
<p>
<ul>
<% @style.beers.each do |b|  %>
<li><%= link_to b.name, beer_path(b) %> by <%= link_to b.brewery.name, brewery_path(b.brewery) %></li>
<% end %>
</ul>
</p>

<p>
<% if current_user %>
<%= edit_and_destroy_buttons(@style) %>
<%end%>
</p>
